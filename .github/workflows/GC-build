name: Gamecube
on:
  push:
    branches:
    - master
jobs:
  build-GC:
    runs-on: ubuntu-latest
    container: devkitpro/devkitppc:latest
    steps:
    - name: Checkout
      uses: actions/checkout@v4
    - name: Compile
      run: |
        make -f Makefile.gc -j$(nproc)
    - name: Upload
      uses: actions/upload-artifact@v4
      with:
        name: GenPlusGX-gc
        path: |
          ./*.dol
